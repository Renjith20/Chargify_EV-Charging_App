<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="16dp"
    android:layout_marginHorizontal="32dp"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/mail"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="32dp"
        android:layout_marginStart="109dp"
        android:layout_marginEnd="110dp"
        android:src="@drawable/mail" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mail"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check your email"
            android:textAlignment="center"
            android:textColor="@color/greendark"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We will send verification code on your email id."
            android:textAlignment="center"
            android:paddingTop="20dp"
            android:textColor="#3E3C3C"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="if not recieved, check the spam folder also."
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:textColor="#535252"
            android:textSize="15sp"
            android:textStyle="italic"/>


        <Button
            android:id="@+id/veri_btn"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/greenmid"
            android:paddingVertical="12dp"
            android:paddingTop="80dp"
            android:text="Proceed"
            android:textColor="@color/white"
            android:textSize="16sp" />



    </LinearLayout>
</RelativeLayout>

